{
  "name": "id3_reader",
  "version": "2.0.0",
  "main": "dist/index.js",
  "readmeFilename": "README.md",
  "description": "Reads and Writes ID3 tags for audio files using Javascript",
  "dependencies": {
    "eslint": "^6.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/interbred-monkey/id3_reader.git"
  },
  "keywords": [
    "ID3",
    "writer",
    "reader",
    "node.js",
    "node",
    "javascript",
    "mp3",
    "audio"
  ],
  "author": "Interbred Monkey",
  "license": "Apache-2.0",
  "scripts": {
    "precommit": "npm run lint",
    "commit": "npx git-cz",
    "lint": "prettier --check \"**/*.ts\" && eslint \"**/*.ts\"",
    "pretest": "npm run lint",
    "test": "FORCE_COLOR=1 jest --silent --coverage",
    "fix": "prettier --write '**/*.ts'",
    "release": "standard-version",
    "releaseas": "standard-version --release-as ",
    "clean": "rimraf dist packages",
    "build": "npm run clean && tsc",
    "dev": "ts-node ./src/index.ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        100
      ],
      "type-case": [
        1,
        "always",
        "lower-case"
      ],
      "subject-case": [
        1,
        "always",
        "lower-case"
      ]
    }
  },
  "bugs": {
    "url": "https://github.com/interbred-monkey/id3_reader/issues"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.9.0",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "standard-version": "^7.1.0",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2"
  }
}
